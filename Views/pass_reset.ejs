<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="../css/auth.css">
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
            font-family: 'Roboto', sans-serif;
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .reset-password-card {
            background: #ffffff;
            border-radius: 20px;
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
            backdrop-filter: blur(8.5px);
            -webkit-backdrop-filter: blur(8.5px);
            border: 1px solid rgba(255, 255, 255, 0.18);
            padding: 40px 30px;
            max-width: 400px;
            width: 100%;
            transition: transform 0.3s ease-in-out;
        }

        .reset-password-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 40px 0 rgba(31, 38, 135, 0.37);
        }

        .reset-password-card h3 {
            margin-bottom: 30px;
            color: #343a40;
        }

        .form-group {
            position: relative;
            margin-bottom: 25px;
        }

        .form-group input {
            padding-right: 40px;
        }

        .toggle-password {
            position: absolute;
            top: 50%;
            right: 15px;
            transform: translateY(-50%);
            cursor: pointer;
            color: #6c757d;
        }

        .btn-reset {
            background-color: #28a745;
            border: none;
            color: #fff;
            padding: 10px 20px;
            border-radius: 25px;
            transition: background-color 0.3s;
            font-size: 1rem;
            width: 100%;
        }

        .btn-reset:hover {
            background-color: #218838;
        }

        .btn-back {
            color: #6c757d;
            text-decoration: none;
            transition: color 0.3s;
            font-size: 1rem;
        }

        .btn-back:hover {
            color: #343a40;
        }

        .alert-message {
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    <div class="reset-password-card">
        <h3 class="text-center">Change Password</h3>

        <!-- Display Success or Error Messages -->
       

        <form method="post" action="/reset_pass/<%= id %>">
            <div class="form-group">
                <label for="new_pass" class="form-label">New Password</label>
                <input type="password" class="form-control" id="new_pass" name="new_pass" placeholder="Enter your new password" required>
                <span class="toggle-password" onclick="togglePassword('new_pass')">
                    <i class="fas fa-eye"></i>
                </span>
            </div>

            <div class="form-group">
                <label for="conf_pass" class="form-label">Confirm Password</label>
                <input type="password" class="form-control" id="conf_pass" name="conf_pass" placeholder="Confirm your new password" required>
                <span class="toggle-password" onclick="togglePassword('conf_pass')">
                    <i class="fas fa-eye"></i>
                </span>
            </div>

            <button type="submit" class="btn-reset">Reset Password</button>
            <p class="text-center mt-3"><a href="/" class="btn-back">Back to Home</a></p>
        </form>
    </div>

    <!-- Bootstrap JS (Optional for Bootstrap features) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Font Awesome JS (Optional for Icons) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    <!-- Custom JavaScript for Password Visibility Toggle -->
    <script>
        function togglePassword(fieldId) {
            const field = document.getElementById(fieldId);
            const toggleIcon = field.nextElementSibling.firstElementChild;

            if (field.type === "password") {
                field.type = "text";
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                field.type = "password";
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }

        // Optional: Password Match Validation
        const form = document.querySelector('form');
        const newPass = document.getElementById('new_pass');
        const confPass = document.getElementById('conf_pass');

        form.addEventListener('submit', (e) => {
            if (newPass.value !== confPass.value) {
                e.preventDefault();
                alert('Passwords do not match. Please try again.');
            }
        });
    </script>
</body>

</html>
